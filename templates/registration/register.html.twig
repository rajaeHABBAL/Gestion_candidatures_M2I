    <div class="container">
        <div class="screen">
            <div class="screen__content">
                <div class="login">
                    <img class="small-image" src="image/faculté%20des%20sciences.jpg">
                    <center>
                        <h3 class="mb-4">Register</h3>
                    </center>
                    {% if form_errors(registrationForm) %}
                        <div class="alert alert-danger text-center" role="alert" style="margin-top: 10px;">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}
                    {{ form_start(registrationForm) }}
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'login__input', 'placeholder': 'User name'}}) }}
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-user"></i>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'login__input', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'login__input', 'placeholder': 'Password'}}) }}
                    </div>
                    {{ form_row(registrationForm.agreeTerms, {
                        'label_attr': {'class': 'custom-label-style'},
                        'attr': {'class': 'custom-checkbox-style'}
                    }) }}


                    <button type="submit" class="button login__submit" style="display: flex; justify-content: center; align-items: center;">
                        Register
                    </button>
                    {{ form_end(registrationForm) }}
                </div>

            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>
    </div>

{% endblock %}
